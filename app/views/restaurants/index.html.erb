<h1>All restaurants</h1>
<ul>
<% @restaurants.each do |restaurant| %>
<li><%= link_to "#{restaurant.name} #{restaurant.address} #{restaurant.phone_number} #{restaurant.category}", restaurant_path(restaurant)%></li>
<% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
